<div class="login-wrapper">
    <!--<a href="index.html">
        <img class="logo" src="img/logo-white.png" alt="logo" />
    </a>-->
    <%= form_for(:session, url: sessions_path , html: { id: "frmLogin" }) do |f| %>
        <div class="box">
            <div class="content-wrap">
                <h6>Log in</h6>
                <%= f.text_field :email, autofocus: true, placeholder: 'email' %>
                <%= f.password_field :password, autofocus: true, placeholder: 'password' %>
                <a href="#" class="forgot">Forgot password?</a>
                <div class="remember">
                    <input id="remember-me" type="checkbox">
                    <label for="remember-me">Remember me</label>
                </div>
                <div class="form-buttons">
                    <div class="button">
                        <%= f.submit "LogIn", id: "submit" %>
                    </div>        
                </div>
            </div>
        </div>
    <% end %>

    <div class="no-account">
        <p>Don't have an account?</p>
        <%= link_to "Sign Up Now!", signup_path %>
    </div>
</div>