<div class="row head">
    <div class="col-md-9">
        <span class="section-title">Campaign Video</span>
        <p>Upload a Video and Select A Thumbnail.</p>
    </div>
    <div class="col-md-3 btn-add-campaign">
        <%= link_to "+ Select From Video Gallery", new_ad_campaign_path, class:"btn-flat new-product" %>
    </div>
</div>
<div class="row display-table">
  <div class="col-md-3 col-xs-12 display-cell grffk-wrap">
    <fieldset class: 'video_upload-fields' id: 'video_upload-fields'>
        <%= vid.label :movie, capture { %>
          <div class="video-add text-center">
            <span class="glyphicon glyphicon-upload" id="vid-upload-icon"></span>
            <span class="vid-upload-notice" id="vid-upload-notice"></span>
          </div>
      <% } %>
      <%= vid.file_field :movie, accept: 'application/ogg,video/ogg,audio/ogg,video/mpeg,video/mp4,audio/mpeg,video/quicktime', class: "form-control" %>
      <%= vid.hidden_field :cloud_asset_url, value: "upload" %>
    </fieldset>
  </div>
  <div class="col-md-9 col-xs-12 display-cell">

    <div class="row bottom10">
      <div class="col-md-12 col-xs-12">
        <%= vid.text_field :title, class: "form-control", placeholder: 'Video Title' %>
      </div>
    </div>
    <div class="row bottom10">
      <div class="col-md-12 col-xs-12">
        <label>Description of Video:</label>
        <%= vid.text_area :description, rows: 5, class: 'form-control' %>
      </div>
    </div>
  </div>
</div>
<div class="row top5">
  <div class="col-md-3 pull-right">
    <%= link_to "OR Upload Custom Thumbnail", new_ad_campaign_path, class:"btn-flat btn-yellowlink pull-right" %>
  </div>
</div>

