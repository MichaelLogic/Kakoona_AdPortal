html.dashboard, html.ad_campaigns, html.orders, 
html.products, html.kakoona_videos, html.merchants, html.rep_show {
	/* background: transparent url('<%= asset_path("bgs/back-orange.png") %>') repeat-x 0 0; */
	background-color: black;
	min-height: 100%;
	background-size: 100% 100%;

	&.small {
		background-size: auto !important;
	}
}

body.dashboard, body.ad_campaigns, body.orders, 
body.products, body.kakoona_videos, body.merchants, body.rep_show {
	background: none;
	
	&.menu {
		#sidebar-nav {
			/* background: transparent url('<%= asset_path("bgs/back-orange.png") %>') repeat-x 0 0; */
			background-color: black;
			background-size: 100% 100%;
			box-shadow: none;
		}
	}
}

.dashboard-nav {
	background: #fff;
	border: 1px solid transparent;
	border-left: 1px solid #dae3e9;
	box-shadow: none;
	margin-left: 177px;

	.notification-dropdown .count {
		background: rgb(252, 130, 123);
	}
}

.login-nav  {
	margin-left: 0px;
	background: #00adee;
	border: 1px solid transparent;
	box-shadow: none;
}


/* sidebar */
#sidebar-nav {
	#dashboard-menu {
		> li.active > a, 
		> li > a:hover {
			color: #fff;
			text-shadow: none;
		}
		> li > a {
			color: rgb(190, 190, 190);
			box-shadow: none;
			border: 0px;
		}
		a i {
			opacity: 0.6;

			&.icon-chevron-down {
				color: #fff;
			}
		}
		ul.submenu {
			border-bottom: 0px;
			box-shadow: 0 2px 1px -1px rgb(75, 101, 136);

			a {
				text-shadow: none;
				color: rgb(211, 211, 211);
			}
		}
	}
}

.content {
	box-shadow: none;
}

