html .sessions, .merch_representatives {
	background: none;
	background-color: #00adee;
	min-height: 100%;
	background-size: 100% 100%;

	&.small {
		background-size: auto !important;
	}
}


.sessions, .merch_representatives{
	h2 {
		color: #fff;
		padding-left: 30px;
		font-size: 3em;
		font-weight: lighter;
		font-family:  'Lato', 'Open Sans';
		.small {
			color: #f28c8c;
		}
	}

	h3{
		color: #fff;
		padding-left: 30px;
		font-size: 2em;
		font-weight: lighter;
		font-family:  'Lato', 'Open Sans';
	}
}

.full-content {
	background-color: #00adee;
	margin-left: 0;
	border-radius: 0;

	form .form-buttons {
	    overflow: hidden;
	    position: relative;
	    text-align: center;
	    line-height: 32px;
	}

	form .form-buttons div {
	    margin: 0!important;
	}


	.login-wrapper {
		position: absolute;
		top: 90px;
		left: 0;
		right: 0;
		text-align: center;
		.logo {
			margin-bottom: 45px;
			position: relative;
			left: -2px;
		}
		.box {
			margin: 0 auto;
			padding: 35px 0 30px;
			float: none;
			width: 540px;
			box-shadow: 0 0 6px 2px rgba(0, 0, 0, 0.1);
			border-radius: 5px;
			background: #f2f2f2;

			.content-wrap {
				width: 82%;
				margin: 0 auto;
			}
			h6 {
				text-transform: uppercase;
				margin: 0 0 30px 0;
				font-size: 18px;
				font-weight: 600;
			}
			input[type="text"],
			input[type="password"]{
				font-size: 24px;
			    font-weight: bold;
			    height: 60px;
			    margin-top: 5px;
			    overflow: hidden;
			    padding: 0 20px;
			    width: 437px;
			    -webkit-appearance: none;
			    border-radius: 0;
			}
			input[type="password"] {
				margin-bottom: 10px;
			}
			input:-moz-placeholder {
				color: rgb(155, 168, 182);
				font-size: 24px;
				letter-spacing: 0px;
				font-style: none;
			}
			input:-ms-input-placeholder{
				color: rgb(155, 168, 182);
				font-style: none;
				letter-spacing: 0px;
				font-size: 24px;
			}
			input::-webkit-input-placeholder{
				color: rgb(155, 168, 182);
				font-style: none;
				letter-spacing: 0px;
				font-size: 24px;
			}

			input[type=submit]{
			    background: #00adee;
			    border: 0;
			    color: #fff;
			    padding: 6px 10px;
			    width: 140px;
			    height: 32px;
			    text-align: left;
			    cursor:pointer;
			}

			a.forgot{
				display: block;
				text-align: right;
				font-style: italic;
				text-decoration: underline;
				color: #3d88ba;
				font-size: 13px;
				margin-bottom: 6px;
			}
			.remember {
				display: block;
				overflow: hidden;
				margin-bottom: 20px;
				input[type="checkbox"] {
					float: left;
					margin-right: 8px;
				}
				label {
					float: left;
					color: #4a576a;
					font-size: 13px;
					font-weight: 600;
				}
			}
			.login {
				text-transform: uppercase;
				font-size: 13px;
				padding: 8px 30px;
			}
		}
		.no-account {
			margin: 0 auto;
			float: none;
			text-align: center;
			font-size: 14px;
			margin-top: 25px;
			p {
				display: inline-block;
				color: #fff;
			}
			a {
				color: #facc13;
				margin-left: 7px;
				border-bottom: 1px solid;
				transition: all .1s linear;
				-moz-transition: all .1s linear; /* Firefox 4 */
				-webkit-transition: all .1s linear; /* Safari and Chrome */
				-o-transition: all .1s linear;  /* Opera */

				&:hover{
					text-decoration: none;
					color: #fff;
					border-bottom-color: #fff;
				}
			}
		}
	}

	/* *** FORM LOGIN *** */
	#frmLogin {
	    float:none;
	    margin-top: 50px;
	}
	#frmLogin label,#frmSignup label {
	/*    position:absolute;
	    top:7px;
	    left:12px;*/
	    color: #999999;
	}
	#frmLogin #submit,#frmSignup #submit, #frmForgot #submit, #changePass #submit, #confirmPass #submit, #changeEmail #submit{
	    background: url('<%= asset_path("arrow-to-right2.png") %>') no-repeat scroll 390px 29px #00ADEE;
	    font-size: 20px;
	    font-weight: bold;
	    height: 80px;
	    text-indent: 25px;
	    width: 480px;
	    -webkit-appearance: none;
	    border-radius: 0;
	}
	#frmLogin #submit:hover,#frmSignup #submit:hover, #frmForgot #submit:hover, #changePass #submit:hover,
	#confirmPass #submit:hover, #changeEmail #submit:hover {
	    background-color: #000 !important;
	}
	.signup_privacy_policy {
	    font-size: 12px;
	    margin: 0 0 18px;
	}
	#frmLogin .signup_privacy_policy {
	    margin-top: 5px;
	}

	#frmForgot #submit {margin-top: 10px;}
	#frmSignup #submit{margin-top: 15px; margin-bottom: 5px;}


	/* *** FORM NEW ENTITY (Merch_Representatives & Content_Providers) *** */
	.formNewEntity{
		width: 82%;
		margin: 0 auto;
		padding: 35px 0 30px;
		float: none;
		box-shadow: 0 0 6px 2px rgba(0, 0, 0, 0.1);
		border-radius: 5px;
		background: #f2f2f2;
		
		.form-content{
			position: relative;
			width: 82%;
			margin: 0 auto;

			h1 {
				color: #ccc;
				text-transform: uppercase;
				margin: 0 0 30px 0;
				font-size: 2em;
				font-weight: bold;
			}

			h6 {
				text-transform: uppercase;
				margin: 0 0 30px 0;
				font-size: 18px;
				font-weight: 600;
			}

			.kakoona-select{
				background:url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='50px' height='50px'><polyline points='46.139,15.518 25.166,36.49 4.193,15.519'/></svg>");
			  	background-color:#00ADEE;
			  	background-repeat:no-repeat;
			  	background-position: right 10px top 30px;
			  	background-size: 20px 20px;
			  	color:white;
			  	padding:12px 50px 12px 12px;
			  	width:auto;
			  	height: 80px;
			  	line-height: 32px;
			  	font-size:24px;
			  	font-weight:bold;
			  	color:#fff;
			  	text-align:center;
			  	text-shadow:0 -1px 0 rgba(0, 0, 0, 0.25);
			  	border-radius:3px;
			  	-webkit-border-radius:3px;
			  	-webkit-appearance: none;
			  	border:0;
			  	outline:0;
			  	-webkit-transition:0.3s ease all;
				   	-moz-transition:0.3s ease all;
				    	-ms-transition:0.3s ease all;
				     		-o-transition:0.3s ease all;
				        		transition:0.3s ease all;
			}
			
			.form-buttons {
			    overflow: hidden;
			    position: relative;
			    text-align: right;
			    line-height: 32px;
				.form-buttons div {
				    margin: 0!important;
				}

				.kakoona-submit{
					background: url('<%= asset_path("arrow-to-right2.png") %>') no-repeat scroll 390px 29px #00ADEE;
				    font-size: 24px;
				    font-weight: bold;
				    height: 80px;
				    text-indent: 25px;
				    width: 480px;
				    -webkit-appearance: none;
				    border-radius: 0;
				    border: 0;
				    color: #fff;
				    text-align: left;
				    cursor:pointer;
				    margin-right: 0;
				}
				.kakoona-submit:hover{
					background-color: #000 !important;
				}
			}

			input[type="text"],
			input[type="password"]{
				font-size: 24px;
			    font-weight: bold;
			    height: 60px;
			    margin-top: 5px;
			    overflow: hidden;
			    padding: 0 20px;
			    width: 100%;
			    -webkit-appearance: none;
			    border-radius: 0;
			}
			input[type="password"] {
				margin-bottom: 10px;
			}
			input:-moz-placeholder {
				color: rgb(155, 168, 182);
				font-size: 24px;
				letter-spacing: 0px;
				font-style: none;
			}
			input:-ms-input-placeholder{
				color: rgb(155, 168, 182);
				font-style: none;
				letter-spacing: 0px;
				font-size: 24px;
			}
			input::-webkit-input-placeholder{
				color: rgb(155, 168, 182);
				font-style: none;
				letter-spacing: 0px;
				font-size: 24px;
			}

		}
	}


	/* background switcher */
	.bg-switch {
		position: absolute;
		background: rgba(255,255,255,0.8);
		top: 60px;
		border-radius: 0px 10px 10px 0px;
		padding: 10px 10px 0px 10px;
		z-index: 999;
		
		.bgs .bg {
			text-align: center;
			margin-bottom: 13px;
			text-decoration: none;
			display: block;

			&.active img {
				border-color: #000;
			}
			img {
				width: 80px;
				height: 60px;
				border: 2px solid rgb(159, 206, 241);
				cursor: pointer;
			}
		}
	}
}

/* responsive */
@media (max-width: 767px) {
	.login-content {
		.login-wrapper .box{
			width: 350px;
		}
	}
}
@media (max-width: 480px) {
	.login-content {
		.login-wrapper .box {
			width: 90%;
		}
	}
}